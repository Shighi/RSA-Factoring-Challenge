#!/usr/bin/python3
"""Module that factorizes as many numbers as possible
into a product of two smaller numbers."""
from sys import argv


def factorize(value):
    """Print a simple decomposition of an integer greater than 1."""
    i = 2

    if value < 2:
        return
    print()
    print(value, "<- initial value")
    while value % i:
        i += 1
    print("{:.0f}={:.0f}*{:.0f}".format(value, value / i, i))
    print(value, "<- final value")
    print()

# Check if exactly one argument is provided
if len(argv) != 2:
    exit()

try:
    with open(argv[1]) as file:
        line = file.readline()

        while line != "":
            value = int(line.split('\n')[0])
            factorize(value)
            line = file.readline()
except Exception:
    pass
